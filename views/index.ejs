<h1>Admin Dashboard</h1>

<!-- USERS -->
<h2>Users</h2>
<a href="/users/add">Add User</a>

<ol>
  <% users.forEach(user => { %>
    <li>
      <%= user.name %> -
      <%= user.email %> -
      <%= user.phoneNumber %>

      <a href="/users/<%= user._id %>/edit">Edit</a>

      <form action="/users/<%= user._id %>/delete" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% }) %>
</ol>

<hr>

